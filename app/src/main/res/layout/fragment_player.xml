<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >

    <View
        android:id="@+id/player_toolbar_fake"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        />
    <Button
        android:id="@+id/player_sharebutton_fake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/player_toolbar_fake"
        android:layout_alignBottom="@id/player_toolbar_fake"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/ic_share_black_24dp"
        style="?android:attr/borderlessButtonStyle"
        android:actionViewClass="android.support.v7.widget.SearchView"
        />
 <ProgressBar
        android:id="@+id/loading_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/toolbar"
        android:visibility="gone"
        />


    <ImageView
        android:id="@+id/song_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_toolbar_fake"
        />

    <TextView
        android:id="@+id/song_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title2"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/song_image"
        android:textColor="@android:color/black"
        />

    <SeekBar
        android:id="@+id/song_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_title2"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:indeterminate="false"
        android:thumbTint="@color/color_primary"
        />
    <LinearLayout
        android:id="@+id/times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_progress">
        <TextView
            android:id="@+id/time_start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:text="0:00"
            />
        <TextView
            android:id="@+id/time_end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:text="5:00"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/music_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/times"
        android:layout_margin="8dp"
        >
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"

            >
            <ImageButton
                android:id="@+id/media_previous"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@drawable/ic_skip_previous_black_48dp"
                style="?android:attr/borderlessButtonStyle"
                />

        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/media_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:layout_gravity="center_horizontal"
                />
        </FrameLayout>
        <FrameLayout

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            >
            <ImageButton
                android:id="@+id/media_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_skip_next_black_48dp"
                style="?android:attr/borderlessButtonStyle"
                />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>